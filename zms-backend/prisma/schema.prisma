generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Admin {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Animal {
  id        String   @id @default(uuid())
  species   String
  gender    String
  isChild   Boolean  @default(false)
  age       Int
  weight    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ticket {
  id          String     @id @default(uuid())
  name        String
  dateOfVisit DateTime
  description String
  passType    PassType
  userType    UserType
  passStatus  PassStatus
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum Role {
  ADMIN
  STAFF
  USER
}


enum PassType {
  ONE_TIME
  MONTHLY
  YEARLY
}

enum UserType {
  INDIVIDUAL
  GROUP
}

enum PassStatus {
  NORMAL
  VIP
}
